---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' }
];
---

<footer class="bg-[#166534] text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg">&copy; {currentYear} Three-Point Tracker. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-[#ef4444] transition-colors duration-200">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>