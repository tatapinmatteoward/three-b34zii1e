---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Analytics Dashboard";
const pageDescription = "Explore data-driven insights into the three-point revolution in basketball with advanced analytics tools and visualizations.";

const features = [
  {
    icon: "fas fa-chart-line",
    title: "Interactive Visualizations",
    text: "Track shooting efficiency, volume trends, and player comparisons across seasons."
  },
  {
    icon: "fas fa-calculator",
    title: "Advanced Metrics",
    text: "Analyze effective field goal percentage (eFG%), three-point attempt rate (3PA/FGA), and more."
  },
  {
    icon: "fas fa-users",
    title: "Team & Player Insights",
    text: "Compare top performers like Stephen Curry or teams leading the league in long-range shooting."
  }
];

const metrics = [
  { label: "Effective FG%", value: "53.2%", change: "+1.8%" },
  { label: "3PA/FGA", value: "38.7%", change: "+4.2%" },
  { label: "3P% Average", value: "35.2%", change: "+2.1%" },
  { label: "League Rank", value: "#1", change: "↑3" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-[#166534] to-[#0d4d2a] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Analytics Dashboard
        </h1>
        <p class="text-xl text-green-100 mb-8 max-w-2xl">
          Data-Driven Insights into Basketball's Three-Point Revolution
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-white text-[#166534] hover:bg-green-50 font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
            Explore Data
          </button>
          <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-medium py-3 px-6 rounded-lg transition-all duration-300">
            View Reports
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {metrics.map((metric, index) => (
          <div key={index} class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 border-l-4 border-[#166534]">
            <div class="text-3xl font-bold text-[#166534] mb-2">{metric.value}</div>
            <div class="text-gray-600 mb-1">{metric.label}</div>
            <div class="text-sm font-medium text-green-600 flex items-center">
              <span>{metric.change}</span>
              <i class="fas fa-arrow-up ml-1"></i>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Key Features</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Advanced analytics tools designed to give you the edge in understanding the three-point revolution
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-2 border border-gray-100">
            <div class="p-8">
              <div class="w-16 h-16 rounded-full bg-[#166534] bg-opacity-10 flex items-center justify-center mb-6">
                <i class={`${feature.icon} text-2xl text-[#166534]`}></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600 mb-4">{feature.text}</p>
              <a href="#" class="text-[#166534] font-medium flex items-center">
                Learn more
                <i class="fas fa-arrow-right ml-2 text-sm"></i>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Analysis Section -->
  <section class="py-20 bg-[#f0fdf4]">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="lg:w-1/2">
          <div class="bg-white rounded-xl shadow-lg p-8 border border-green-100">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Three-Point Analytics Matter</h2>
            <p class="text-gray-700 mb-6">
              Basketball has evolved. In the era of pace-and-space offenses, understanding three-point dynamics is crucial for coaches, analysts, and fans alike. Our platform gives you access to the most comprehensive three-point datasets available.
            </p>
            <p class="text-gray-700 mb-8">
              Dive deep into shooting efficiencies, shot selection patterns, and the strategic impact of three-point attempts. Whether you're analyzing a single game or tracking league-wide trends, our tools provide the insights needed for informed decision-making.
            </p>
            <div class="flex items-center">
              <div class="flex-shrink-0 mr-4">
                <i class="fas fa-chart-bar text-3xl text-[#166534]"></i>
              </div>
              <div>
                <h4 class="font-bold text-gray-900">Data Precision</h4>
                <p class="text-gray-600 text-sm">Accurate metrics with real-time updates</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <div class="relative">
            <div class="bg-[#166534] rounded-xl shadow-xl p-1">
              <div class="bg-white rounded-lg p-6 h-80 flex items-center justify-center">
                <div class="text-center">
                  <i class="fas fa-database text-5xl text-[#166534] mb-4"></i>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Comprehensive Database</h3>
                  <p class="text-gray-600">10+ years of basketball analytics data</p>
                </div>
              </div>
            </div>
            <div class="absolute -bottom-6 -right-6 bg-[#ef4444] text-white p-4 rounded-lg shadow-lg">
              <div class="text-2xl font-bold">100K+</div>
              <div class="text-sm">Data Points</div>
            </div>
            <div class="absolute -top-6 -left-6 bg-white p-4 rounded-lg shadow-lg border border-gray-100">
              <div class="text-2xl font-bold text-[#166534]">99%</div>
              <div class="text-sm">Accuracy</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#166534] to-[#0d4d2a]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Transform Your Analysis?</h2>
      <p class="text-xl text-green-100 max-w-3xl mx-auto mb-10">
        Join thousands of analysts making data-driven decisions with precision insights.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-[#166534] hover:bg-green-50 font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          Get Started Free
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-medium py-4 px-8 rounded-lg transition-all duration-300">
          Schedule a Demo
        </button>
      </div>
    </div>
  </section>

  <!-- Footer Note -->
  <footer class="py-10 bg-gray-900 text-gray-400 text-center">
    <div class="container mx-auto px-4">
      <p>© {new Date().getFullYear()} Three-Point Tracker Analytics. Precision Data for the Modern Game.</p>
    </div>
  </footer>
</Layout>